
- flash.each do |name, msg|
  - if msg.is_a?(String)
    .container
      %div{class:"alert alert-#{name.to_s == 'notice' ? 'success' : 'danger'} alert-dismissible flash-msg fade show", role:"alert" }
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "alert", type:"button"}
        = content_tag :div, msg, id:"flash_#{name}" 
