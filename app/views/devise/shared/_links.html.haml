.d-flex.align-items-center.flex-column
  - if controller_name != 'sessions'
    .d-flex
      Already have an account?
      .ms-2.fw-bold= link_to "Log in", new_session_path(resource_name), class:"text-decoration-none text-primary"
    %br/

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    .d-flex.mt-3.mb-4
      or
      .ms-2= link_to "Forgot password", new_password_path(resource_name), class:"text-decoration-none text-primary"
    %br/

  - if devise_mapping.registerable? && controller_name != 'registrations'
    .d-flex
      Don't have an account?
      .ms-2.fw-bold= link_to "Sign up", new_registration_path(resource_name), class:"text-decoration-none"
    %br/
 
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    .py-2= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"text-decoration-none"
    %br/
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    .py-2= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class:"text-decoration-none"
    %br/
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)
      %br/
