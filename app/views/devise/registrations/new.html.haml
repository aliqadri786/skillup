.container.py-5
  .row 
    .col-4.offset-4.shadow-sm.px-4.py-4.rounded
      .fw-bold.text-center Sign Up and Start Learning!  
      %hr
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        .form-inputs

          .border.d-flex.border-dark.rounded
            .d-flex.align-items-center.justify-content-center.ps-3.pe-1
              .fa.fa-envelope.text-muted
              = f.input :email, required: true, autofocus: true,label: false, placeholder:"Email", input_html: { autocomplete: "email", class:"py-2 no-focus-input width-100 height-48px font-18" } 
          
          .border.d-flex.border-dark.rounded.mt-2
            .d-flex.align-items-center.justify-content-center.ps-3.pe-1
              .fa.fa-lock.text-muted
              = f.input :password, required: true,label: false,placeholder:"Password", input_html: { autocomplete: "new-password", class:"py-2 no-focus-input width-100 height-48px font-18" }                                          |
          
          .border.d-flex.border-dark.rounded.mt-2
            .d-flex.align-items-center.justify-content-center.ps-3.pe-1
              .fa.fa-lock.text-muted
              = f.input :password_confirmation, required: true,label: false,placeholder:"Confirm Password",input_html: { autocomplete: "new-password", class:"py-2 no-focus-input width-100 height-48px font-18" } 
        .form-actions.d-grid.gap-2.mt-3
          = f.button :submit, "Sign up", class:'btn btn-secondary py-2 height-48px font-18 fw-bold'
      .mt-3= render "devise/shared/links"
