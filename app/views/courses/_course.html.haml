.col-sm-6.col-md-3.col-lg-3.mb-3  
  .card.shadow-sm.border-none
    = link_to course, class:"text-decoration-none text-black" do
      - if course.avatar.attached?
        = image_tag course.avatar, class:"card-img-top"
      .card-body
        %h5.card-title.fw-bold.h6 
          = course.title
        .course-instructor-card
          .fa.fa-user.text-muted
          %span.ms-2= course.user.username
        %span.fw-bold.text-rating.font-14= course.average_rating
        %span.ms-2
          - 5.times do |r|
            - if course.average_rating.present? && course.average_rating < r+1
              .fa.fa-star.text-muted  
            - else
              .fa.fa-star.rating-star   
        %small.text-muted= "(#{course.enrollments_count})"
        .font-weight-600.mt-1.letter-spacing-1= number_to_currency(course.price)
